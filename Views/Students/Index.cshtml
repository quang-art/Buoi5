@model IEnumerable<Buoi5.Models.Students>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Students</h1>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            Grade
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Grade.gradeName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.studentId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.studentId" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.studentId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Có thể thêm script nếu cần (ví dụ: tìm kiếm, lọc dữ liệu)
    </script>
}